<?xml version='1.0' encoding='UTF-8'?>
<StateMachine name="OMNI_PLANNING" outcomes="aborted" start_state="GETTING_PARAMS">
    <State name="GETTING_PARAMS" type="cpp" class="omni_plan/GetParamsState">
        <Transition from="aborted" to="aborted"/>
        <Transition from="succeeded" to="LOADING_PLUGINS"/>
    </State>
    <State name="LOADING_PLUGINS" type="cpp" class="omni_plan/LoadPluginsState">
        <Transition from="aborted" to="aborted"/>
        <Transition from="succeeded" to="IDLE"/>
    </State>
    <State name="GENERATING_PDDL" type="cpp" class="omni_plan/GeneratePddlState">
        <Transition from="succeeded" to="PLANNING"/>
    </State>
    <State name="PLANNING" type="cpp" class="omni_plan/PlanState">
        <Transition from="succeeded" to="PUBLISHING_PDDL"/>
        <Transition from="aborted" to="IDLE"/>
    </State>
    <State name="PUBLISHING_PDDL" type="cpp" class="omni_plan/PublishPDDLState">
        <Transition from="succeeded" to="VALIDATING_PLAN"/>
    </State>
    <State name="VALIDATING_PLAN" type="cpp" class="omni_plan/ValidatePlanState">
        <Transition from="valid" to="EXECUTING_PLAN"/>
        <Transition from="invalid" to="IDLE"/>
    </State>
    <State name="IDLE" type="cpp" class="omni_plan/IdleState">
        <Transition from="has_goals" to="GENERATING_PDDL"/>
        <Transition from="no_goals" to="IDLE"/>
    </State>
    <State name="EXECUTING_PLAN" type="cpp" class="omni_plan/ExecutePlanState">
        <Transition from="canceled" to="IDLE"/>
        <Transition from="succeeded" to="IDLE"/>
        <Transition from="aborted" to="GENERATING_PDDL"/>
    </State>
</StateMachine>