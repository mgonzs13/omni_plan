<?xml version='1.0' encoding='UTF-8'?>
<StateMachine name="PLANNING" outcomes="failed" start_state="GETTING_PARAMS">
    <State name="GETTING_PARAMS" type="cpp" class="easy_plan/GetParamsState">
        <Transition from="aborted" to="failed"/>
        <Transition from="succeeded" to="LOADING_PLUGINS"/>
    </State>
    <State name="LOADING_PLUGINS" type="cpp" class="easy_plan/LoadPluginsState">
        <Transition from="failed" to="failed"/>
        <Transition from="succeed" to="IDLE"/>
    </State>
    <State name="GENERATING_PDDL" type="cpp" class="easy_plan/GeneratePddlState">
        <Transition from="succeed" to="PLANNING"/>
    </State>
    <State name="PLANNING" type="cpp" class="easy_plan/PlanState">
        <Transition from="succeed" to="EXECUTING_PLAN"/>
        <Transition from="failed" to="IDLE"/>
    </State>
    <State name="IDLE" type="cpp" class="easy_plan/IdleState">
        <Transition from="has_goals" to="GENERATING_PDDL"/>
        <Transition from="no_goals" to="IDLE"/>
    </State>
    <State name="EXECUTING_PLAN" type="cpp" class="easy_plan/ExecutePlanState">
        <Transition from="canceled" to="IDLE"/>
        <Transition from="succeed" to="IDLE"/>
    </State>
</StateMachine>